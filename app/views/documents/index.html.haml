
%table.table.table-hover
  %thead
    %tr
      %th Title
      %th Words
      %th Requester
      %th Last Updated
      %th

  %tbody
    - @documents.each do |document|
      %tr
        %td
          = link_to edit_document_path(document) do
            %i.icon-pencil
            = raw title_or_default(document.title)
        %td= document.word_count
        %td= document.requester
        %td= time_tag document.updated_at, format: :short
        %td
          = link_to document, method: :delete, data: { confirm: 'Are you sure?' } do
            %i.icon-trash
